{{!< default}}

{{!-- This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. --}}

{{!-- Everything inside the #post tags pulls data from the page --}}
{{#post}}
    <div class="content-post" {{#if feature_image}}style="background-image: url({{feature_image}});background-size: cover;background-position: 50%;"{{/if}}>
        <div class="cp-header">
            <h2>{{title}}</h2>
        </div>
    </div>
    <div class="article">
        {{content}}

        <div class="back-to-top">
            <hr>
            <i class="fa fa-calendar"></i>&nbsp; {{date format="YYYY-MM-DD"}}   &nbsp; {{tags prefix="&nbsp; <i class=\"fa fa-tag\"></i> "}} &nbsp; <i class="fa fa-chevron-circle-up"></i>&nbsp; <a href="#">TOP</a>
            <hr />
        </div>
    </div>

    
    <div class="comments" id="comments"></div>

{{/post}}